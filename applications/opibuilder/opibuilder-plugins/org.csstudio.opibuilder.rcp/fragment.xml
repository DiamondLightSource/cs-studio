<?xml version="1.0" encoding="UTF-8"?>
<?eclipse version="3.4"?>
<fragment>
   <extension point="org.eclipse.core.expressions.propertyTesters">
      <propertyTester
          class="org.csstudio.opibuilder.OPIShellTester"
          id="org.csstudio.opibuilder.OPIShellTester"
          namespace="org.csstudio.opibuilder"
          properties="isOPIShell"
          type="org.eclipse.swt.widgets.Shell">
      </propertyTester>
   </extension>
   <extension
         point="org.eclipse.ui.editors">
      <!-- Note regarding name:
           In Navigator, the "Open With.." context menu lists *.opi 'editors'
           in alphabetical order:
           OPI Display (Workspace)
           OPI Editor
       -->
      <editor
            default="true"
            extensions="opi"
            icon="icons/OPIRunner.png"
            id="org.csstudio.opibuilder.DisplayLauncher"
            launcher="org.csstudio.opibuilder.runmode.DisplayLauncher"
            name="OPI Display (Workbench)">
      </editor>
      <editor
            default="false"
            extensions="opi"
            icon="icons/OPIRunner.png"
            id="org.csstudio.opibuilder.ShellLauncher"
            launcher="org.csstudio.opibuilder.runmode.ShellLauncher"
            name="OPI Display (Standalone Window)">
      </editor>
   </extension>
   <extension point="org.eclipse.ui.views">
      <view
            allowMultiple="false"
            class="org.csstudio.opibuilder.runmode.OPIShellSummary"
            fastViewWidthRatio="0.3"
            icon="icons/OPIRunner.png"
            id="org.csstudio.opibuilder.opiShellSummary"
            name="Standalone OPI Summary">
      </view>
   </extension>
   <extension
         point="org.eclipse.ui.intro.configExtension">
      <configExtension
            content="intro/firststeps.xml"
            configId="org.eclipse.ui.intro.universalConfig">
      </configExtension>
   </extension>
   <extension
      point="org.eclipse.ui.commands">
      <command
            categoryId="org.eclipse.ui.category.views"
            description="OPI Shell opened"
            defaultHandler="org.csstudio.opibuilder.runmode.OPIShellsChangedHandler"
            id="org.csstudio.opibuilder.opiShellsChanged"
            name="OPI Shell opened">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <!-- an EditOPI menu item is also added by org.csstudio.opibuilder.editor
               that is visible for OPIViews -->
         <command
               commandId="org.csstudio.opibuilder.commands.editopi"
               icon="icons/edit.gif"
               label="Edit OPI"
               style="push">
            <visibleWhen>
                <with variable="activeShell">
                    <test
                        property="org.csstudio.opibuilder.isOPIShell"
                        forcePluginActivation="true"/>
                </with>
            </visibleWhen>
         </command>
      </menuContribution>
   </extension>
</fragment>
